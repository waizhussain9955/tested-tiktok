{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.py"
        },
        {
            "source": "/css/(.*)",
            "destination": "css/$1"
        },
        {
            "source": "/js/(.*)",
            "destination": "js/$1"
        },
        {
            "source": "/img/(.*)",
            "destination": "img/$1"
        },
        {
            "source": "/sitemap.xml",
            "destination": "sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "robots.txt"
        },
        {
            "source": "/favicon.ico",
            "destination": "img/favicon.ico"
        },
        {
            "source": "/(.*).html",
            "destination": "$1.html"
        },
        {
            "source": "/",
            "destination": "index.html"
        }
    ]
}